{
  "name": "flask-tailwind-starter",
  "version": "1.0.0",
  "description": "## Key Features - Basic Flask app scaffolding - TailwindCSS setup using npm (with purge implemented for Production)",
  "main": "",
  "scripts": {
    "dev": "TAILWIND_MODE=watch NODE_ENV=development postcss ./app/static/src/css/tailwind.css -o ./app/static/dist/css/main.css -w",
    "build:dev": "TAILWIND_MODE=build NODE_ENV=development postcss ./app/static/src/css/tailwind.css -o ./app/static/dist/css/main.css",
    "build:prod": "TAILWIND_MODE=build NODE_ENV=production postcss ./app/static/src/css/tailwind.css -o ./app/static/dist/css/main.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackbaba/Flask-Tailwind-Starter.git"
  },
  "author": "Amrinder Dhindsa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/blackbaba/Flask-Tailwind-Starter/issues"
  },
  "homepage": "https://github.com/blackbaba/Flask-Tailwind-Starter#readme",
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.18",
    "postcss": "^8.3.0",
    "tailwindcss": "^2.1.4"
  },
  "dependencies": {
    "autoprefixer": "^10.2.6"
  }
}
